<div class='container'>
  <div class='row'>
    <div class='col-md-4 offset-md-2'>
      <h2 class='title-position title'>Sign up</h2>
    </div>
  </div>
  <div class='row center title newitem'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      
      <div class="form-group">
        <%= f.label :last_name, class: "under" %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, class: "under" %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :kana_last_name, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.text_field :kana_last_name, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :kana_first_name, class: "under"   %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.text_field :kana_first_name, class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :postal_code, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.text_field :postal_code,class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :address, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.text_field :address,class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :telephone, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
        <%= f.text_field :telephone,class: "form-control"  %>
      </div>
  
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="form-group">
        <%= f.submit "Sign up", class:'btn btn-outline-dark' %>
      </div>
    <% end %>
  </div>
</div>


