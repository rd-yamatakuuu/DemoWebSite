 <div class="container">
    <div class="row">
      <div class="col-4">
        <nav class="navbar navbar-light">
          <h2>Genre</h3>
        </nav>
      </div>
    </div>
    <%= render partial: 'layouts/flash' %>
    <div class='row'>
      <div class='col-md-3 offset-md-2'>
        <div class='newitem'>
          <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
            <div class="form-group">
              <label for='inputName'>Genre_name</label><br>
              <%= f.text_field :name, autofocus: true, id:'inputName' %>
            </div>
            <div class="form-group center">
              <%= f.submit 'Submit', class:'btn btn-lg btn-outline-dark' %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-4 offset-md-2">
        <table class='table bodydesign'>
          <thead class="thead-light">
            <tr>
              <th class='text-white bg-dark'>Genre</th>
              <th class='text-white bg-dark'></th>
            </tr>
          </thead>
          <tbody class="thead-light">
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to 'Edit',edit_admin_genre_path(genre),class: 'btn btn-sm btn-dark col-xs-12' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
 </div>
