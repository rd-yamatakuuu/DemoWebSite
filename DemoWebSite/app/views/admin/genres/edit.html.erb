          <label for='inputName'>Name</label>
          <%= f.text_field :name,class:"col-xs-12" %>
        </div>
        <div class="form-group center">
          <%= f.submit 'Submit', class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
