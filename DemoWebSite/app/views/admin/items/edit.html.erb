<div class='container'>
  <div class='row'>
    <div class='col-4 offset-1'>
      <nav class="navbar navbar-light">
      <h2>Editing Item</h2>
      </nav>
    </div>
    <div class='col-md-8'></div>
  </div>
  <div class='row center'>
    <div class='mx-auto newitem'>
      <%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>
        <div class='form-group'>
          <label for='inputImage'>Image</label><br>
          <%= f.attachment_field :image, id:'inputImage', placeholder:'写真' %>
        </div>
        <div class='form-group'>
          <label for='inputName'>Name</label><br>
          <%= f.text_field :name, autofocus: true, id:'inputName', placeholder:'名前' %>
        </div>
        <div class='form-group'>
          <label for='inputIntroduction'>Introduction</label><br>
          <%= f.text_field :introduction, autofocus: true, id:'inputIntroduction', placeholder:'ここに説明文を記述します', :size=>'30x5' %>
        </div>
        <div class='form-group'>
          <label for='inputGenre'>Genre</label><br>
          <%= f.collection_select :genre_id, Genre.all, :id, :name,{}, {class: 'btn btn-outline-dark'}%>
        </div>
        <div class='form-group'>
          <label for='inputPrice'>Price(no_tax)</label><br>
          <%= f.number_field :price, autofocus: true, id:'inputPrice', placeholder:'税抜価格' %>
          <text>円</text>
        </div>
        <div class='form-group'>
          <label>Status</label><br>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, '販売中', {value: :true, style: 'display: inline-block;'} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, '販売停止中', {value: :false, style: 'display: inline-block;'} %>
        </div>
        <div class='form-group center'>
          <%= f.submit 'Save', class:'btn btn-outline-dark' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>