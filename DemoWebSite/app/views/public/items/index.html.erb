<div class='container'>
  <div class='row'>
    <div>
      <% @items.each do |item| %>
        <%= link_to item_path(item.id), data: {"turbolinks" => false}, :style => 'text-decoration:none; color:black;' do %>
          <%= attachment_image_tag(item, :image, height: '200', fallback: 'no_image.jpg') %>
          <%= item.name %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= paginate @items %>
</div>