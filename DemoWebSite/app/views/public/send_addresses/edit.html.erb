<div class='container'>
  <div class='row'>
    <h2>Edit your registered address</h2>
  </div>
  <div class='row center'>
    <div class='newitem'>
      <%= form_with model:@send_address, local: true do |f| %>

        <div class="form-group">
          <%= f.label :postal_code, class: "under" %><br />
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address, class: "under" %><br />
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name, class: "under"  %><br />
          <%= f.text_field :name, class: "form-control"%>
        </div>

        <div class="form-group center">
          <%= f.submit "Update", class:'btn btn-outline-dark' %>
        </div>
      <% end %>
    </div>
  </div>
</div>