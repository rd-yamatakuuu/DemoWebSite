            <h3><%= link_to 'Log in', new_customer_session_path, class:'btn btn-lg btn-dark' %></h3>
        </div>
    </div>
    <div class='row'>
        <div class='mx-auto'>
            <h3><%= link_to 'Welcome', new_customer_registration_path, class:'btn btn-lg btn-dark'%></h3>
        </div>
    </div>
<% end %>

