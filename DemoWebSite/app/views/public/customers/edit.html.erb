<div class='container'>
  <div class='row'>
    <h2>Edit your profile</h2>
  </div>
  <div class='row center'>
    <div class='newitem'>
      <%= form_with model:@customer, local: true do |f| %>
        <div class="form-group">
          <%= f.label :last_name, class: "under" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
  
        <div class="form-group">
          <%= f.label :first_name, class: "under" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
  
        <div class="form-group">
          <%= f.label :kana_last_name, class: "under"  %><br />
          <%= f.text_field :kana_last_name, class: "form-control"%>
        </div>
  
        <div class="form-group">
          <%= f.label :kana_first_name, class: "under"   %><br />
          <%= f.text_field :kana_first_name, class: "form-control"  %>
        </div>
  
        <div class="form-group">
          <%= f.label :email, class: "under"  %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
        </div>
  
        <div class="form-group">
          <%= f.label :postal_code, class: "under"  %><br />
          <%= f.text_field :postal_code,class: "form-control"  %>
        </div>
  
        <div class="form-group">
          <%= f.label :address, class: "under"  %><br />
          <%= f.text_field :address,class: "form-control"  %>
        </div>
  
        <div class="form-group">
          <%= f.label :telephone, class: "under"  %><br />
          <%= f.text_field :telephone,class: "form-control"  %>
        </div>
        
        <div class="form-group center">
          <%= f.submit "Update", class:'btn btn-outline-dark' %>
        </div>
      <% end %>
    </div>
  </div>
</div>